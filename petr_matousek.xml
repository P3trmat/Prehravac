<!-- Hlavni nastavenÃ­ -->
<hlavni>
		<jazyk>CZ</jazyk>
	<automaticky-aktualizovat>0</automaticky-aktualizovat>
	<vzhled-a-chovani>
    <vzhled>Vychozi</vzhled>
		<povolit-vice-instanci>0</povolit-vice-instanci>
		<integrovat-video-do-rozhrani>1</integrovat-video-do-rozhrani>
		<posledni-pozice>1</posledni-pozice>
    <po-ukonceni-prehravani>Vypnout</po-ukonceni-prehravani>
	</vzhled-a-chovani>
  <automaticky-pouzivat-pro-tyto-typy-souboru>
    <mp3>1</mp3>
    <mkv>1</mkv>
    <mp4>1</mp4>
    <avi>1</avi>
    <MPG>1</MPG>
    <MPEG>1</MPEG>
    <FLAC>1</FLAC>
  </automaticky-pouzivat-pro-tyto-typy-souboru>
	<zobrazit-ikonu-v-panelu>1</zobrazit-ikonu-v-panelu>
	<resetovat-nastaveni>0</resetovat-nastaveni>	
	
</hlavni>

<!-- Video -->
<Video>
  <povolit-video>1</povolit-video>
  <obecne>
	 <vzdy-cela-obrazovka>0</vzdy-cela-obrazovka>
	 <nemenit-rozliseni-ve-fullscreen>1</nemenit-rozliseni-ve-fullscreen>
	 <vzdy-navrchu>1</vzdy-navrchu>
	 <rychlost-prehravani>1</rychlost-prehravani>
  </obecne>
	<zoom>100%</zoom>
	<Barvy>
		<jas>2</jas>
		<kontrast>1</kontrast>
		<sytost>0</sytost>
		<odstin>1</odstin>
		<vychozi>0</vychozi>
		<pamatovat-si-nastaveni>0</pamatovat-si-nastaveni>
	</Barvy>
	<Obraz>
		<pomer-stran>16:9</pomer-stran>
		<rozliseni>1920x1080</rozliseni>
		<oriznout-okraje>0</oriznout-okraje>
	</Obraz>
</Video>

<!-- Zvuk -->
  <Zvuk>
  	<povolit-zvuk>1</povolit-zvuk>
  	<hlasitost>50</hlasitost>
  	<dolby-surround>1</dolby-surround>
  	<prostorovy-efekt-sluchatek>1</prostorovy-efekt-sluchatek>
  	<vystup>Reproduktory</vystup>
  	<vizualizace>0</vizualizace>
  	<zvukova-stopa>stopa 1</zvukova-stopa>
  	<vyvazeni-L-P>50</vyvazeni-L-P>
  </Zvuk>

  <!-- Titulky -->
  <titulky>
  	<zakazat-titulky>0</zakazat-titulky>
  	<umisteni>dole uprostred</umisteni>
  	<zpozdeni>0</zpozdeni>
  	<vlastnosti-primarnich-titulku>
  			<pismo>Aerial</pismo>
  			<velikost>30</velikost>
  			<barva-pisma>bila</barva-pisma>
        <barva-obrysu>cerna</barva-obrysu>
        <sirka-pozadi>Normalni</sirka-pozadi>
  			<barva-pozadi>cerna</barva-pozadi>
        <pruhlednost-pozadi>100%</pruhlednost-pozadi>
  	</vlastnosti-primarnich-titulku>
    <sekundarni-titulky>0</sekundarni-titulky>
    <vlastnosti-sekundarnich-titulku>
        <pismo>Aerial</pismo>
        <velikost>15</velikost>
        <barva-pisma>zluta</barva-pisma>
        <barva-obrysu>cerna</barva-obrysu>
        <sirka-obrysu>Normalni</sirka-obrysu>
        <barva-pozadi>cerna</barva-pozadi>
        <pruhlednost-pozadi>100%</pruhlednost-pozadi>
    </vlastnosti-sekundarnich-titulku>
  </titulky>
</Prehravac-nastaveni>